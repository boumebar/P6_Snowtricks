{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}
	<form method="post">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		<h1 class="text-center mb-4">Connexion</h1>
		<div class="container row my-5">
			<div class="row col-md-8 mx-auto">
				{{ form_start(formView)}}
				{{ form_errors(formView)}}
				{{ form_widget(formView)}}
				<div class="col-md-6 mx-auto d-grid">
					<button class="btn btn-block btn-lg btn-primary mt-3" type="submit">
						connexion
					</button>
				</div>
				{{ form_end(formView)}}
			</div>
			<a class="mt-3 text-center link-primary" href="{{ path('app_forgot_password_request')}}">Forgot your password ?</a>
			<a class="mt-3 text-center link-primary" href="{{ path('security_register')}}">Not registered ?</a>
		</div>
	{% endblock %}
