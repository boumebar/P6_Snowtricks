{% extends 'base.html.twig' %}

{% block title %}Utilisateur
{% endblock %}

{% block body %}
	<div class="container col-md-10">
		<h1 class="text-center my-5">Choose your photo
			{{ user.username }}</h1>
		<div class="row my-5">
			<div class="col-lg-3"></div>
			<div class="col-lg-6 mt-5">
				{{ form_start(form) }}
				<fieldset class="userInterface" align="center">
					{{ form_row(form.picture) }}
					<button type="submit" class="btn btn-primary my-5">Update</button>
				</fieldset>
				{{ form_end(form) }}
			</div>
			<div class="col-lg-3"></div>
		</div>
	</div>
{% endblock %}
