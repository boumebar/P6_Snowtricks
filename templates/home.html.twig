{% extends "base.html.twig" %}

{% set nav = "Home" %}

{% block title  %}Home
{% endblock %}


{% block header %}
	<header class="masthead d-flex align-items-center" style="background-image:url({{ asset('img/home.jpg')}})">
		<div class=" container position-relative px-4 px-lg-5">
			<div class="row gx-4 gx-lg-5 justify-content-center">
				<div class="col-md-10 col-lg-8 col-xl-7">
					<div class="site-heading">
						<h1>SNOWTRICKS</h1>
					</div>
				</div>
			</div>
		</div>
	</header>
	<a href="#main" id="main-content">
		<i class="fas fa-arrow-circle-down fa-3x"></i>
	</a>
{% endblock %}

{% block body %}
	<div>
		<h2 class="text-center" id="main">Tricks</h2>
		<a href="{{path('trick_create')}}" class="btn btn-primary">Ajouter une figure</a>
		<div class="album py-5 bg-light">
			<div class="container">
				<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
					{% for trick in tricks %}
						<div class="col">
							<div class="card shadow-sm">
								<img src="{{ asset('img/home.jpg')}}"/>
								<title>{{ trick.name}}</title>
							</div>
							<div class="card-body">
								<h3 class="text-center">{{ trick.name|upper}}</h3>
								<div class="d-flex justify-content-between align-items-center">
									<div class="btn-group">
										<a href="{{ path('trick_show',{ "category_slug" : trick.category.slug ,"slug" : trick.slug }) }}" type="button" class="btn btn-sm btn-outline-primary">View</a>
									</div>
									{% if app.user %}
										<div>
											<a href="{{ path('trick_edit',{"id" : trick.id })}}" type="button" class="btn btn-sm font-primary">
												<i class="fas fa-pen "></i>
											</a>
											<form action="{{ path('trick_delete',{'id':trick.id})}}" method="post" style="display:inline-block">
												<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ trick.id) }}">
												<input type="hidden" name="_method" value="DELETE">
												<button type="submit">
													<i class="fas fa-trash-alt"></i>
												</button>
											</form>
										</div>
									{% endif %}
								</div>
							</div>
						</div>
					{% endfor %}
				</div>
				<div class="text-center mt-4">
					<button type="button" class="btn btn-outline-primary">Load More</button>
				</div>
			</div>
		</div>
	</div>
</div>{% endblock %}
